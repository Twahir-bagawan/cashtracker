<!DOCTYPE html>
<html>
<head>
  <title>History | CashTracker</title>
  <style>
    body {
      font-family: Poppins, sans-serif;
      background: #f8fafc;
      padding: 40px;
    }
    table {
      margin: auto;
      border-collapse: collapse;
      width: 60%;
    }
    th, td {
      border: 1px solid #cbd5e1;
      padding: 10px;
      text-align: center;
    }
    th {
      background: #e2e8f0;
    }
    .add {
      color: green;
      font-weight: bold;
    }
    .reduce {
      color: red;
      font-weight: bold;
    }
  </style>
</head>
<body>
  <h1>Transaction History for <%= user.username %></h1>
  <a href="/profile" style="color:#4f46e5; text-decoration:none;">← Back to Profile</a>
  <br><br>

  <% if (!transactions || transactions.length === 0) { %>
    <p>No transactions yet.</p>
  <% } else { %>
    <table>
      <tr>
        <th>Date</th>
        <th>Type</th>
        <th>Amount</th>
      </tr>
      <% transactions.forEach(t => { %>
        <tr>
          <td><%= new Date(t.date).toDateString() %></td>

          <% if (t.type === 'add') { %>
            <td class="add">Add</td>
          <% } else { %>
            <td class="reduce">Reduce</td>
          <% } %>

          <td>₹ <%= t.amount %></td>
        </tr>
      <% }) %>
    </table>
  <% } %>
</body>
</html>
