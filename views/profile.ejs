<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Profile | CashTracker</title>
  <style>
    body {
      font-family: 'Poppins', sans-serif;
      background-color: #f1f5f9;
      margin: 0;
    }

    /* Navbar */
    nav {
      background-color: #4f46e5;
      color: white;
      padding: 15px 40px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      flex-wrap: wrap;
    }

    nav h1 {
      margin: 0;
      font-size: 1.5rem;
      letter-spacing: 0.5px;
    }

    /* Search bar styling */
    .search-bar {
      display: flex;
      align-items: center;
      gap: 8px;
    }

    .search-bar input {
      padding: 6px 10px;
      border-radius: 6px;
      border: none;
      outline: none;
      width: 200px;
      font-size: 0.9rem;
    }

    .search-bar button {
      background-color: #16a34a;
      border: none;
      color: white;
      padding: 6px 12px;
      border-radius: 6px;
      cursor: pointer;
      font-size: 0.9rem;
      transition: 0.2s;
    }

    .search-bar button:hover {
      background-color: #15803d;
    }

    /* Create user button */
    .create-user {
      background: #facc15;
      color: black;
      padding: 8px 16px;
      border-radius: 6px;
      text-decoration: none;
      font-weight: 500;
      transition: 0.2s;
    }

    .create-user:hover {
      background: #eab308;
    }

    .container {
      width: 90%;
      margin: 30px auto;
    }

    .user-card {
      background: #ffffff;
      border-radius: 12px;
      padding: 20px 25px;
      margin-bottom: 15px;
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      box-shadow: 0 4px 10px rgba(0,0,0,0.08);
    }

    .user-info {
      display: flex;
      flex-direction: column;
      gap: 6px;
    }

    .user-info h3 {
      margin: 0;
      font-size: 1.2rem;
      color: #1e293b;
    }

    .user-actions {
      display: flex;
      gap: 10px;
    }

    .user-actions a button {
      background: #e2e8f0;
      border: none;
      padding: 6px 12px;
      border-radius: 6px;
      cursor: pointer;
      font-size: 0.9rem;
      transition: 0.2s;
    }

    .user-actions a button:hover {
      background: #cbd5e1;
    }

    .balance-section {
      text-align: right;
    }

    .balance {
      font-size: 1.2rem;
      font-weight: 600;
      color: #16a34a;
      margin-bottom: 8px;
    }

    .balance-actions {
      display: flex;
      justify-content: flex-end;
      gap: 10px;
    }

    .balance-actions button {
      background: #4f46e5;
      color: white;
      border: none;
      padding: 6px 14px;
      border-radius: 6px;
      cursor: pointer;
      font-size: 0.9rem;
      transition: 0.2s;
    }

    .balance-actions button.reduce {
      background: #dc2626;
    }

    .balance-actions button:hover {
      opacity: 0.9;
    }

    .empty {
      text-align: center;
      color: #475569;
      margin-top: 60px;
    }
  </style>
</head>
<body>

  <!-- Navbar -->
  <nav>
    <h1>CashTracker</h1>

    <!-- Search bar -->
    <form class="search-bar" action="/search" method="GET">
      <input type="text" name="query" placeholder="Search user..." required />
      <button type="submit">Search</button>
    </form>

    <!-- Create User Button -->
    <a href="/create" class="create-user">+ Create User</a>
  </nav>

  <div class="container">
    <% if (users.length === 0) { %>
      <div class="empty">
        <h2>No users yet</h2>
        <p><a href="/create" style="color:#4f46e5; text-decoration:none;">Create one now</a></p>
      </div>
    <% } else { %>
      <% users.forEach(user => { %>
        <div class="user-card">
          <div class="user-info">
            <h3><%= user.username %></h3>
            <div class="user-actions">
              <a href="/edit/<%= user._id %>" 
                style="display:inline-block; padding:10px 20px; background:#4f46e5; color:white; text-decoration:none; border-radius:8px;">
                Edit
              </a>
              <a href="/history/<%= user._id %>"><button>History</button></a>
            </div>
          </div>

          <div class="balance-section">
            <div class="balance">â‚¹ <%= user.balance %></div>
            <div class="balance-actions">
              <a href="/transaction/<%= user._id %>/add"><button class="add">Add</button></a>
              <a href="/transaction/<%= user._id %>/reduce"><button class="reduce">Reduce</button></a>
            </div>
          </div>
        </div>
      <% }) %>
    <% } %>
  </div>

</body>
</html>
